
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  email     String    @unique
  password  String

  wallets        Wallet[]
  snapshotAssets SnapshotAsset[]
}

model Wallet {
  id        String    @id @default(cuid())
  address   String
  name      String
  chain     String
  userId    String
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, address, chain])
}

model Snapshot {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  totalValue Float    

  snapshotAssets SnapshotAsset[]
}

model SnapshotAsset {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())

  asset      String
  balance    Float
  price      Float

  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  snapshotId String
  snapshot   Snapshot  @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@unique([snapshotId, userId, asset])
}